<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099FF"
    tools:context=".CreateWorkActivity">

    <!-- Title and Tagline -->
    <TextView
        android:id="@+id/createworkTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Create New Work"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"/>

    <!-- Work Title Input -->
    <EditText
        android:id="@+id/createeditWorkTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Work Title"
        android:textColor="#000000"
        android:padding="12dp"
        android:layout_below="@id/createworkTitle"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text_bg"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="12dp"/>

    <!-- Work Description Input -->
    <EditText
        android:id="@+id/createeditWorkDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Work Description"
        android:textColor="#000000"
        android:padding="12dp"
        android:layout_below="@id/createeditWorkTitle"
        android:layout_marginTop="12dp"
        android:background="@drawable/edit_text_bg"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="12dp"/>

    <!-- Create Work Button -->
    <Button
        android:id="@+id/createbtnCreateWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Work"
        android:textColor="#0099FF"
        android:backgroundTint="@color/white"
        android:layout_below="@id/createeditWorkDescription"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="20dp" />

    <!-- Cancel Button -->
    <Button
        android:id="@+id/createbtnCancelWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="#0099FF"
        android:backgroundTint="#FFFFFF"
        android:layout_below="@id/createbtnCreateWork"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="20dp" />

</RelativeLayout>
