<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/tvPdfTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary Report"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"/>

    <!-- Date -->
    <TextView
        android:id="@+id/tvPdfDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: "
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:paddingBottom="10dp"/>

    <!-- Total People Worked -->
    <TextView
        android:id="@+id/tvPdfTotalPeopleWorked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total People Worked: 0"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:paddingBottom="10dp"/>

    <!-- Total Earnings -->
    <TextView
        android:id="@+id/tvPdfTotalEarnings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Earnings: ₱0.00"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:paddingBottom="10dp"/>

    <!-- Total Per Person -->
    <TextView
        android:id="@+id/tvPdfTotalPerPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Per Person: ₱0.00"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:paddingBottom="10dp"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heraldo Rice Mill"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:layout_gravity="center"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purok IV San Francisco, Talisay, Camarines Norte, Region V, Philippines"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:layout_gravity="center"
        />

</LinearLayout>
